<Page x:Class="toExamApp.PageAuth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:toExamApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAuth">

    <Grid>
        <TextBox Name="login" Margin="150 125 150 0" Padding="5" FontSize="16" VerticalAlignment="Top"/>
        <PasswordBox Name="password" Margin="150 0 150 0" Padding="5" FontSize="16" VerticalAlignment="Center"/>
        <Button Name="sign" Content="SIGN IN" VerticalAlignment="Bottom" FontSize="16" Margin="150 0 150 125" Padding="5" Click="sign_Click"/>
    </Grid>
</Page>
